{
  "name": "LegoNMC",
  "description": "Adds a couple of cool features to NameMC",
  "author": "i4g",
  "manifest_version": 3,
  "version": "1.0.0",
  "content_scripts": [
    {
      "js": ["background.js"],
      "matches": ["*://*.namemc.com/*"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["js/footer.js", "js/image.js"],
      "matches": ["*://*.namemc.com/*"]
    }
  ]
}
